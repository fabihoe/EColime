<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.AvatarSelectionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="choose your climate warrior"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_23sdp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginBottom="50dp"
            />

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="2"

            >
            <ImageView
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="@dimen/_70sdp"
                android:src="@drawable/ic_avatar_1"
                android:tag="ic_avatar_1"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="@dimen/_70sdp"
                android:src="@drawable/ic_avatar_2"
                android:tag="ic_avatar_2"

                />
            <ImageView
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="@dimen/_70sdp"
                android:src="@drawable/ic_avatar_3"
                android:tag="ic_avatar_3"

                />
            <ImageView
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="@dimen/_70sdp"
                android:src="@drawable/ic_avatar_4"
                android:tag="ic_avatar_4"
                android:layout_marginTop="@dimen/_30sdp"

                />
            <ImageView
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="@dimen/_70sdp"
                android:src="@drawable/ic_avatar_5"
                android:tag="ic_avatar_5"
                android:layout_marginTop="@dimen/_30sdp"

                />
            <ImageView
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="@dimen/_70sdp"
                android:src="@drawable/ic_avatar_6"
                android:tag="ic_avatar_6"
                android:layout_marginTop="@dimen/_30sdp"
                />


        </GridLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/logo"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />


    </LinearLayout>
</ScrollView>