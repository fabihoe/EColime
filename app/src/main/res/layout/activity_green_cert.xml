<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    tools:context=".Activities.GreenCertActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/which_co2_fighter_you_you_want_to_hire"
        android:textColor="@color/black"
        android:textSize="@dimen/_23sdp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_regular"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="full compensation"
        android:textColor="@color/black"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="@dimen/_20sdp"
        android:fontFamily="@font/poppins_regular"
        />
    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:progressTint="@color/green"
        android:layout_marginStart="@dimen/_20sdp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_20sdp"
        >
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:track="@drawable/track"
            android:layout_gravity="center"
            android:thumb="@drawable/thumb"
            />

        <ImageView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/men1"
            android:layout_marginStart="@dimen/_20sdp"
            />

    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50% compensation"
        android:textColor="@color/black"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="@dimen/_20sdp"
        android:fontFamily="@font/poppins_regular"
        />
    <ProgressBar
        android:id="@+id/progressBar2"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:progressTint="@color/green"
        android:layout_marginStart="@dimen/_20sdp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_20sdp"
        >
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:track="@drawable/track"
            android:layout_gravity="center"
            android:thumb="@drawable/thumb"
            />

        <ImageView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/men2"
            android:layout_marginStart="@dimen/_20sdp"
            />

    </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMoreInfo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:text="more info"
            android:textSize="@dimen/_18sdp"
            android:backgroundTint="#A6CC93"
            app:cornerRadius="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <ImageView

            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            android:src="@drawable/back"
            android:elevation="-11dp"
            android:layout_marginTop="-100dp"
            android:scaleType="fitXY"
            />

    </LinearLayout>
</ScrollView>