<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    tools:context=".Activities.BattleInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:text="Back"
            android:textSize="@dimen/_18sdp"
            android:backgroundTint="#A6CC93"
            app:cornerRadius="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/by_choosing_your_co2_fighter_you_re_contributing_to_renewable_energy_projects_to_compensate_for_not_charging_at_100_green_ports"
            android:textColor="@color/black"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginStart="@dimen/_20sdp"
            android:fontFamily="@font/poppins_regular"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <ImageView

            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            android:src="@drawable/back"
            android:elevation="-11dp"
            android:layout_marginTop="-100dp"
            android:scaleType="fitXY"
            />

    </LinearLayout>
</ScrollView>